{
  "private": true,
  "name": "vscode-mdv",
  "displayName": "mdv",
  "description": "",
  "version": "0.0.8",
  "main": "./dist/extension.cjs",
  "homepage": "https://github.com/yszk0123/mdv",
  "repository": {
    "type": "git",
    "url": "https://github.com/yszk0123/mdv"
  },
  "keywords": [],
  "author": "Yuji Suzuki",
  "publisher": "yszk0123",
  "bugs": {
    "url": "https://github.com/yszk0123/mdv/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mdv.showPreviewToSide",
        "title": "Show mdv Preview to the Side"
      },
      {
        "command": "mdv.closePreview",
        "title": "Close mdv Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown",
          "command": "mdv.showPreviewToSide",
          "group": "navigation",
          "title": "Preview"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "mdv.showPreviewToSide",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == markdown",
          "command": "mdv.closePreview",
          "group": "navigation"
        }
      ]
    }
  },
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "npm run clean && node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "package": "npm run clean && node esbuild.mjs --production && npm run --workspace @mdv/web build:vscode && vsce package --no-dependencies",
    "deploy": "npm run package && vsce publish --no-dependencies"
  },
  "dependencies": {
    "@mdv/core": "*"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.3"
  }
}
