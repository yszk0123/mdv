{
  "name": "@mdv/vscode",
  "displayName": "mdv",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "type": "module",
  "main": "./out/extension.cjs",
  "contributes": {
    "commands": [
      {
        "command": "mdv.showPreviewToSide",
        "title": "Show Preview to the Side"
      },
      {
        "command": "mdv.closePreview",
        "title": "Close Preview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "package": "node esbuild.mjs --production"
  },
  "dependencies": {
    "@mdv/core": "*"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.3"
  }
}
